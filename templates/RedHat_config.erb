<% if @getpwnam -%> 
getpwnam    <%= @getpwnam %>
<% else -%>
getpwnam    SELECT username,'x',uid,gid,gecos,homedir,shell \
            FROM users \
            WHERE username='%1$s' \
            LIMIT 1
<% end -%>
